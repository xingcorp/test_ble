<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".analytics.dashboard.AnalyticsDashboardActivity">

    <!-- ========== APP BAR ========== -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/nordic_blue"
            app:title="ðŸ“Š Analytics Dashboard"
            app:titleTextColor="@android:color/white"
            app:subtitle="Real-time Nordic Beacon Analytics"
            app:subtitleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ========== MAIN CONTENT ========== -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ========== SERVICE HEALTH STATUS ========== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/health_status_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/health_status_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_health_good"
                            app:tint="@color/success_green" />

                        <TextView
                            android:id="@+id/health_status_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Service Health: Excellent"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/health_score_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95%"
                            android:textAppearance="?attr/textAppearanceHeadline5"
                            android:textColor="@color/success_green"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Health Indicators -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Memory"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/memory_usage_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45MB"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CPU"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/cpu_usage_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.2%"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Battery"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/battery_level_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="87%"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Uptime"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/uptime_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2h 45m"
                                android:textAppearance="?attr/textAppearanceBody1"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========== SIGNAL PROCESSING METRICS ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¬ Signal Processing Performance"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Kalman Filter Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“¡ Kalman Filter Effectiveness:"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/kalman_effectiveness_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="94%"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/nordic_blue"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Distance Accuracy -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“ Distance Calculation Accuracy:"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/distance_accuracy_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â±0.4m"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/success_green"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Signal Quality -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“Š Overall Signal Quality:"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/signal_quality_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excellent"
                            android:textAppearance="?attr/textAppearanceBody1"
                            android:textColor="@color/success_green"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========== REAL-TIME BEACON DATA ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Nordic Beacon Analytics"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Real-time Signal Chart Placeholder -->
                    <View
                        android:id="@+id/signal_chart_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/background_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Analytics Summary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Detections/Hour"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/detection_rate_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="127"
                                android:textAppearance="?attr/textAppearanceHeadline5"
                                android:textColor="@color/nordic_blue"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Distance"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/avg_distance_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.2m"
                                android:textAppearance="?attr/textAppearanceHeadline5"
                                android:textColor="@color/success_green"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg RSSI"
                                android:textAppearance="?attr/textAppearanceCaption"
                                android:textColor="@color/text_hint" />

                            <TextView
                                android:id="@+id/avg_rssi_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-67dBm"
                                android:textAppearance="?attr/textAppearanceHeadline5"
                                android:textColor="@color/nordic_blue"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========== PERFORMANCE METRICS ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âš¡ Performance Monitoring"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Performance Chart Placeholder -->
                    <View
                        android:id="@+id/performance_chart_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@color/background_secondary"
                        android:layout_marginBottom="16dp" />

                    <!-- Performance Summary -->
                    <TextView
                        android:id="@+id/performance_summary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š Memory: Optimal | CPU: Low | Battery: Efficient"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@color/text_secondary"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ========== DEBUG INFORMATION ========== -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”§ Debug Information"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Debug Actions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_export_logs"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Export Logs"
                            android:textColor="@color/nordic_blue"
                            app:strokeColor="@color/nordic_blue" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_performance_report"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Performance Report"
                            android:textColor="@color/nordic_blue"
                            app:strokeColor="@color/nordic_blue" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ========== FLOATING ACTION MENU ========== -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Refresh Analytics"
        app:srcCompat="@drawable/ic_refresh"
        app:backgroundTint="@color/nordic_blue"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
